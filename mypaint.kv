#:import hex_color kivy.utils.get_color_from_hex

<MyCanbasWidget>:
    BoxLayout:
        orientation: 'vertical'
        height: root.height

        width: root.width

        MyPaintWidget:
            id: paint_area
            size_hint_y: 0.8
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            
            Button:
                id: button1
                text: "Clear"
                ont_size: 30
                on_release: app.clear_canvas()
            
                #on_release: root.clear_canvas()
            

            ToggleButton:
                text: "black "
                group: 'color'
                state: 'down'
                background_color: hex_color('#000000')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)

            ToggleButton:
                text: "red "
                group: 'color'
                background_color: hex_color('#ff0000')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)
                
            ToggleButton:
                text: "biue "
                group: 'color'
                background_color: hex_color('#0000ff')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)

            ToggleButton:
                text: "green "
                group: 'color'
                background_color: hex_color('#008000')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)
                
            ToggleButton:
                text: "orange"
                group: 'color'
                background_color: hex_color('#ff4500')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)
                
            ToggleButton:
                text: "purple"
                group: 'color'
                background_color: hex_color('#800080')
                on_release: app.painter.ids['paint_area'].set_color(self.background_color)